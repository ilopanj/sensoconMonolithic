<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity SensorThreshold.
    -->
    <changeSet id="20180822202327-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="sensor_device_id"
                                 baseTableName="sensor_threshold"
                                 constraintName="fk_sensor_threshold_sensor_device_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sensor_device"/>

        <addForeignKeyConstraint baseColumnNames="sensor_id"
                                 baseTableName="sensor_threshold"
                                 constraintName="fk_sensor_threshold_sensor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sensor"/>

        <addForeignKeyConstraint baseColumnNames="sensor_group_id"
                                 baseTableName="sensor_threshold"
                                 constraintName="fk_sensor_threshold_sensor_group_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sensor_group"/>

    </changeSet>
</databaseChangeLog>
